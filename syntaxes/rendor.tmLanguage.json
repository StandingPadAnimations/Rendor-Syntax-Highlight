{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Rendor",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#cpp-defs"
		},
		{
			"include": "#functions"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.rendor",
					"match": "\\b(if|while|for|return|edef|or|not|is|and|import|else|cimport|extern|namespace)\\b"
				},
				{
					"name": "keyword.control.rendor",
					"match": "\\b(i64|double|bool|string)\\b"
				}
			]
		},
		"constants" : {
			"patterns": [
				{
					"name": "constant.character",
					"match": "\\b(^|*|/|+|-|=|!|>|<)\\b"
				},
				{
					"name": "constant.other",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.numeric",
					"match": "[0-9]"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.rendor",
					"begin": "//",
					"end": "\n"
				}
			]
		},
		"cpp-defs": {
			"patterns": [
				{
					"name": "keyword.control.rendor",
					"begin": "~",
					"end": "\n"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.rendor",
					"begin": "edef",
					"end": "("
				},
				{
					"name": "entity.name.rendor",
					"begin": "#rdef",
					"end": "("
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.rendor",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "string.quoted.single.rendor",
					"begin": "'",
					"end": "'"
				},
				{
					"name": "string.quoted.other.rendor",
					"begin": "`",
					"end": "`"
				},
				{
					"name": "constant.character.escape.rendor",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.rendor"
}